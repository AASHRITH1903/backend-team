<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update Achievement</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" >
    <script src="https://cdn.ckeditor.com/4.9.1/standard/ckeditor.js"></script>
</head>
<body>    
    <h2 style="display:none;" id="alerts"><%=alerts %></h2>
    <% if(alerts.length!=0){ %>
        <script type="text/javascript">
        document.addEventListener("DOMContentLoaded", function(event) { 
            var x = $("#alerts").html(); 
                alert(x);
        });
        </script>
    <% } %>
    <%- include('partials/navbar_admin') %>
    <div class="container">
        <div class="row">
        <div class="col-8">
            <div>
                <h2>Update Achievement</h2>
                <hr class="my-4">
            </div>
        <form method="POST" enctype="multipart/form-data" action="/achievements/update/<%=ach._id%>">
            <div class="form-group">
                <label for="title">Title:</label>
                <input class="form-control" type="text" name="title" id="title" value="<%=ach.title%>" ><br>
            </div>
            <div class="form-group">
                <label for="caption">Caption:</label><br>
                <input class="form-control" type="text" name="caption" id="caption" value="<%=ach.caption%>" >
            </div>
            <div class="form-group">
                <label for="des">Description:</label>
                <textarea class="form-control" type="text" name="des" id="des" rows="4" placeholder="Describe about the achievement..."><%=ach.description%></textarea>
            </div>
            <div class="form-group">
                <p>Pics:</p>
                <%
                    for (var i=0 ; i < ach.pics_url.length ; i++ ){ %>
                       
                        <img src="/images/<%=ach.pics_url[i]%>" class="rounded" alt=" No File Selected " height="100px" style="margin-bottom: .5rem;">
                  <%  }  %>
                
                 
                
                <input type="file" name="pics" id="pics" style="display:none;" accept='image/*' multiple/>
                <label for="pics" class="btn btn-secondary" style="height: 100px; max-width: 100px; padding-top:25px; ">Update Pics</label>
            </div>

            <div class="form-group">
                <input type="submit" class="btn btn-info" value="UPDATE"/>
            </div> 
             
        </form>
        </div>
        </div>
    </div>
    <script>
        CKEDITOR.replace('des');
    </script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha256-4+XzXVhsDmqanXGHaHvgh1gMQKX40OUvDEBTu8JcmNs="  crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" ></script>
<%- include('partials/bottom_spacing.ejs') %>
</body>
</html>