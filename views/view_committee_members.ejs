<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Committee members</title>
    <%-include('partials/dependencies.ejs')%>    
</head>
<body>    
    <%-include('partials/navbar_admin.ejs')%> <br><br>
    <div class="container">
    <% if (members && members.length) { %>
    <h2 style="color: blue; text-decoration: underline;"> List of all Committee members </h2>
    <div >
        <a class="btn btn-warning" href="/committee_members/create" role="button">Add Committee Members</a>
    </div>
    <div class="row row-cols-1 row-cols-md-2">
        <% members.forEach((member) => { %>
            <div class="col mb-4">
                <div class="card h-100">
                    <img src="/images/<%= member.dp_url %>" alt="dp of member <%= member.name %>" style="margin: 10px; padding:10px;;" width="100px"  height="150px">
                    <div class="card-body">
                        <h5 class="card-title"><%= member.name %> [<strong><%=member.position%></strong>] </h5>
                        <p class="card-text">
                            <p><b>Roll No :</b> <%=member.roll_num%></p>
                            <p><b>Email :</b> <%=member.email_id%></p>
                            <p><b>Contact :</b> <%=member.contact%></p>
                        </p>
                        <p>
                            <a href="/committee_members/update/<%=member._id%>">Edit</a> | <a href="/committee_members/delete/<%=member._id%>">Remove</a>
                        </p>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
    <% }else{ %>
        <div class="container">
            <h1 class="display-1">No Members exist yet</h1>
            <div >
                <a class="btn btn-warning" href="/committee_members/create" role="button">Add Committee Members</a>
            </div>
        </div>
    <% }%>
    </div>
    <style>
        img {
            pointer-events: none;
            -webkit-user-drag: none; 
            -moz-user-select: none;
            -ms-user-select: none;
            -webkit-user-select: none;
            -khtml-user-select: none;
            -moz-user-select: none;
            -o-user-select: none;
            user-select: none;
        }
    </style>

<%- include('partials/bottom_spacing.ejs') %>
</body>
</html>