<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Blogs</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" >
    <style>
    blockquote p {
    padding: 15px;
    background: #eee;
    border-radius: 5px;
    }

    blockquote p::before {
        content: '\201C';
    }

    blockquote p::after {
        content: '\201D';
    }

    </style>
</head>
<body>    
  <%-include('partials/alert_system.ejs')%>
    <%-include('partials/navbar_clubhead.ejs')%> <br>
    <div class="container">
        <a href="/blog/create" class="btn btn-outline-danger" >Create a Blog</a> 
    </div>
    <br>
 
    <div class="container">
    <% if (blogs && blogs.length) { %>
    <h2 style="color: blue; text-decoration: underline;"> List of All Blogs </h2>
    <!-- Template for each blog-->
    <div class="row row-cols-1 row-cols-md-2">
        <% blogs.forEach((blog) => { %>
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title"><%=blog.title%></h5>
                    <p class="card-text">
                        <%=blog.category%>
                    </p>
                    <p>
                        <a href="/blog/details/<%=blog._id%>">details</a> | <a href="/blog/update/<%=blog._id%>">edit</a> | <a href="/blog/delete/<%=blog._id%>">delete</a>
                    </p>
                </div>
            </div>
        <% }) %>
    </div>
    <% }else{ %>
        <div class="container">
            <h1 class="display-1">No blog created yet</h1>
        </div>
    <% }%>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha256-4+XzXVhsDmqanXGHaHvgh1gMQKX40OUvDEBTu8JcmNs="  crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" ></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" ></script>
<%- include('partials/bottom_spacing.ejs') %>
</body>
</html>