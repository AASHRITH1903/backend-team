<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" >
    <title>View Club Heads</title>
    <style>
        h5{
            color: red;
        }
        #club_head{
            color: blue;
            padding-top: 10px;
        }
    </style>
    
</head>
<body>    
    <h2 style="display:none;" id="alerts"><%=alerts %></h2>
    <% if(alerts.length!=0){ %>
        <script type="text/javascript">
        document.addEventListener("DOMContentLoaded", function(event) { 
            var x = $("#alerts").html(); 
                alert(x);
        });
        </script>
    <% } %>
    <%- include('partials/navbar_admin') %>
    <h3 style="text-align: center; text-decoration: underline; padding-top: 30px;">List of Club Heads</h3>
    <% if (club_heads && club_heads.length) { %>
    <div class="container" style="padding-top:30px;">
        <div class="col-md-6 m-auto">
            <!-- template for each club -->
            <div class="list-group">
                <% club_heads.forEach((club_head) => { %>
                    <div class="list-group-item list-group-item-action"><h5><b>Club Name : </b><%= club_head.club_name %></h5>
                    <p id="club_head" class="mb-2"><b>Club Head : </b><%= club_head.name %></p>
                    <p id="club_head" class="mb-1"><b>email_id : </b><%=club_head.email_id%></p>
                    <p> <a href="/club_head/delete/<%=club_head._id%>" onclick="return confirm('Are you sure you want to delete <%= club_head.club_name %> ?')">remove</a></p>
                    </div>
                <%})%>
                <a class="btn btn-warning" href="/club_head/create" role="button">Create Club Head</a>   
            </div>
            
        </div>
    </div>
    <% }else{ %>
        <div class="container">
            <h1 class="display-5">No clubs created yet</h1>
        </div>
        <div >
            <a class="btn btn-warning" href="/club_head/create" role="button">Create Club Head</a>
        </div>
    <% }%>
        
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha256-4+XzXVhsDmqanXGHaHvgh1gMQKX40OUvDEBTu8JcmNs="  crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" ></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" ></script>

<%- include('partials/bottom_spacing.ejs') %>
</body>
</html>