<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Club Heads</title>
    <style>
        h5{
            color: red;
        }
        #club_head{
            color: blue;
            padding-top: 10px;
        }
    </style>
    <%-include('partials/dependencies.ejs')%>    
</head>
<body>    
  <%-include('partials/alert_system.ejs')%>
    <%- include('partials/navbar_admin') %>
    <% if (club_heads && club_heads.length) { %>
        <h3 style="text-align: center; text-decoration: underline; padding-top: 30px;">List of Club Heads</h3>
        <a class="btn btn-warning" href="/club_head/create" style="margin-left: 20px;" role="button">Create Club Head</a>
        <div class="container" style="padding-top:30px;">
            <div class="col-md-6 m-auto">
                <!-- template for each club -->
                <div class="list-group">
                    <% club_heads.forEach((club_head) => { %>
                        <div class="list-group-item list-group-item-action"><h5><b>Club Name : </b><%= club_head.club_name %></h5>
                        <p id="club_head" class="mb-2"><b>Club Head : </b><%= club_head.name %></p>
                        <p id="club_head" class="mb-1"><b>email_id : </b><%=club_head.email_id%></p>
                        <p> <a href="/club_head/update/<%=club_head._id%>" onclick="return confirm('Are you sure you want to Update <%= club_head.club_name %> ?')">Update</a></p>
                        </div>
                    <%})%>   
                </div>
            </div>
        </div>
    <% }else{ %>
        <div class="container">
            <h1 class="display-5">No clubs created yet</h1>
        </div>
        <div >
            <a class="btn btn-warning" href="/club_head/create" style="margin-left: 20px;" role="button">Create Club Head</a>
        </div>
    <% }%>

<%- include('partials/bottom_spacing.ejs') %>
</body>
</html>