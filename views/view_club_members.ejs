<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Events</title>
    <%-include('partials/dependencies.ejs')%>    
</head>
<body>    
  <%-include('partials/alert_system.ejs')%>
    <%-include('partials/navbar_clubhead.ejs')%> <br><br>
    <a class="btn btn-warning" href="/club_members/create" style="margin-left: 20px;" role="button">Add Club Members</a>
    <div class="container">
    <% if (members && members.length) { %>
    <h2 style="color: blue; text-decoration: underline;"> List of all club members </h2>
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">DP</th>
                    <th scope="col">Post</th>
                    <th scope="col">Roll Number</th>
                    <th scope="col">Email ID</th>
                    <th scope="col">Contact</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                <% members.forEach((member) => { %>
                    <tr>
                        <th scope="row"><%= member.name %></th>
                        <td><img src="/images/<%= member.dp_url %>" alt="dp of member <%= member.name %>" width="80px" height="80px"></td>
                        <td><%=member.position%></td>
                        <td><%=member.roll_num%></td>
                        <td><%=member.email_id%></td>
                        <td><%=member.contact%></td>
                        <td><a href="/club_members/update/<%=member._id%>">Edit</a> | <a href="/club_members/delete/<%=member._id%>">Remove</a></td>
                    </tr>
                <%})%>   
            </tbody>
        </table>
    <% }else{ %>
        <div class="container">
            <h1 class="display-1">No Members exist yet</h1>
            <div >
                <a class="btn btn-warning" href="/club_members/create" role="button">Add Club Members</a>
            </div>
        </div>
    <% }%>
    </div>
    <style>
        img {
            pointer-events: none;
            -webkit-user-drag: none; 
            -moz-user-select: none;
            -ms-user-select: none;
            -webkit-user-select: none;
            -khtml-user-select: none;
            -moz-user-select: none;
            -o-user-select: none;
            user-select: none;
        }
    </style>

<%- include('partials/bottom_spacing.ejs') %>
</body>
</html>