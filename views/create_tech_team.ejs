<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tech Team</title>
    <%-include('partials/dependencies.ejs')%>    
</head>
<body>    
 
    <%- include('partials/navbar_admin') %>

    <h3 style="text-align: center; text-decoration: underline; padding-top: 30px;">Add New Tech team</h3>
    
    <div class="container" style="margin-top: 20vh;" >
        
        <div class="row">
            <div class="col-md-6 m-auto">
                <form method="POST" enctype="multipart/form-data" action="/tech_teams/create">
                    <div class="form-group">
                        <img id="poster_preview" class="rounded" alt=" No File Selected " height="100px" style="margin-bottom: .5rem;">
                        <input type="file" name="team_poster_url" id="team_poster_url" accept='image/*' style="display:none;"/>
                        <label for="team_poster_url" class="btn btn-secondary" style="height: 100px; max-width: 100px; padding-top:25px; ">Upload Team Poster </label>
                    </div>

                    <div class="form-group">
                        <label for="team_name">Enter Team name</label>
                        <input placeholder="Team name" type="text" class="form-control" id="team_name" name="team_name" required>
                    </div>
                    <div class="form-group">
                        <img id="preview" class="rounded" alt=" No File Selected " height="100px" style="margin-bottom: .5rem;">
                        <input type="file" name="dp_url" id="dp_url" accept='image/*' style="display:none;"/>
                        <label for="dp_url" class="btn btn-secondary" style="height: 100px; max-width: 100px; padding-top:25px; ">Upload DP</label>
                    </div>
                    <div class="form-group">
                        <label for="tech_head">Tech head</label>
                        <input placeholder="Tech head"  type="text" class="form-control" id="tech_head" name="tech_head">
                    </div>
                    <div class="form-group">
                        <label for="contact">Contact</label>
                        <input placeholder="contact"  type="text" class="form-control" id="contact" name="contact">
                    </div>
                    <div class="form-group">
                        <label for="name">Email Id</label>
                        <input placeholder="email-id"  type="email" class="form-control" id="email_id" name="email_id">
                    </div>
                    <div class="form-group">
                        <label for="ref_link">Ref link</label>
                        <input placeholder="reference link" class="form-control" id="ref_link" name="ref_link" >
                    </div>
                    <div class="form-group">
                        <label for="des">Description:</label>
                        <textarea class="form-control" type="text" name="description" id="des" rows="4" placeholder="Describe about the achievement..."></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Create Tech team</button>
                </form>
            </div>
        </div>
    </div>
    <script>
    CKEDITOR.replace('des');
    function readURL(input) {
    if (input.files && input.files[0]) {
        var reader = new FileReader();

        reader.onload = function (e) {
            $("#preview").attr('src', e.target.result);
        }

        reader.readAsDataURL(input.files[0]);
    }
    }

    function readPosterURL(input) {
    if (input.files && input.files[0]) {
        var reader = new FileReader();

        reader.onload = function (e) {
            $("#poster_preview").attr('src', e.target.result);
        }

        reader.readAsDataURL(input.files[0]);
    }
    }

    $("#dp_url").change(function(){
        readURL(this);
    });

    $('#team_poster_url').change(function(){
        readPosterURL(this);
    })
    </script>
<%- include('partials/bottom_spacing.ejs') %>
</body>
</html>