<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Send Mail</title>
  <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" >
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.5.2/animate.css" />
    <%-include('partials/dependencies.ejs')%>    
</head>
<body>    
  <%-include('partials/alert_system.ejs')%>
  <div>
  <%-include('partials/navbar_clubhead.ejs')%>
  <div class="container">
    <h1 class="brand"><span>IITTP</span> Tech Hub Mail </h1>
    <div class="wrapper animated bounceInLeft">
      <div class="company-info">
        <h3>Mailing account...</h3>
        <ul>
          <li><i class="fa fa-road"></i>  IIT Tirupati </li>
          <li><i class="fa fa-envelope"></i>  Tech.iittp@gmail.com</li>
        </ul>
      </div>
      <div class="container" style="padding-top: 10px;">
          <div class="col-md-5 m-auto">
              <h3>Send E-mail</h3>
              <div class="form-group">
                <p>Event Name: <%=event.name%></p>
              </div>
              <div class="form-group">
                <p>Name: <%=user.name%></p>
              </div>
              <div class="form-group">
                <p>E-Mail ID: <%=user.email_id%></p>
              </div>
              <div class="form-group">
                <p>Contact: <%=user.contact%></p>
              </div>
              <form method="POST" action="/gform/push_notification/send/<%=event._id%>">
                <div class="form-group">
                  <label>Subject</label>
                  <input name="subject" class="form-control" placeholder="enter subject of mail"></textarea>
                </div>
              <div class="form-group">
                <label>Message</label>
                <textarea name="message" class="form-control" rows="5"></textarea>
              </div>
              <div class="form-group">
                <label>File uploads</label>
                <input type="file"  name="file" >
              </div>
                <div class="form-group">
                  <button class="btn btn-primary" type="submit">Send Notification</button>
                </div>

              </form>
          </div>
      </div>
    </div>
  </div>
<%- include('partials/bottom_spacing.ejs') %>
</body>
</html>