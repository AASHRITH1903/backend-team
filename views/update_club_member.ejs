<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Club Member</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" >
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha256-4+XzXVhsDmqanXGHaHvgh1gMQKX40OUvDEBTu8JcmNs="  crossorigin="anonymous"></script>
</head>
<body>    
  <%-include('partials/alert_system.ejs')%>
    <%- include('partials/navbar_clubhead') %>
    <div class="container" style="margin-top: 20vh;" >
        <div class="row">
            <div class="col-md-6 m-auto">
                
                <form method="POST" enctype="multipart/form-data" action="#">
                    <div class="form-group">
                        <img src="/images/<%=member.dp_url%>" id="preview" class="rounded" alt=" No File Selected " height="100px" style="margin-bottom: .5rem;">
                        <input type="file" name="dp" id="dp" accept='image/*' style="display:none;"/>
                        <label for="dp" class="btn btn-secondary" style="height: 100px; max-width: 100px; padding-top:25px; ">Upload Club Member DP</label>
                    </div>
                    <div class="form-group">
                        <label for="name">Enter Club Member Name</label>
                        <input placeholder="NULL" value="<%=member.name%>" type="text" class="form-control" id="name" name="name">
                    </div>
                    <div class="form-group">
                        <label for="name">Enter Position / Post</label>
                        <input placeholder="NULL" value="<%=member.position%>" type="text" class="form-control" id="position" name="position">
                    </div>
                    <div class="form-group">
                        <label for="name">Roll number</label>
                        <input placeholder="NULL" value="<%=member.roll_num%>" type="text" class="form-control" id="roll_num" name="roll_num">
                    </div>
                    <div class="form-group">
                        <label for="name">Email Id</label>
                        <input placeholder="NULL" value="<%=member.email_id%>" type="email" class="form-control" id="email_id" name="email_id">
                    </div>
                    <div class="form-group">
                        <label for="contact">Contact number of the Club Member (mobile)</label>
                        <input placeholder="NULL" value="<%=member.contact%>" type="tel" pattern="^[6-9]\d{9}$" class="form-control" id="contact" name="contact" >
                    </div>
                    <input name="dp_url" value="<%=member.dp_url%>" style="display: none;"/>
                    <button type="submit" class="btn btn-primary">Update Member</button>
                </form>
            </div>
        </div>
    </div>
    <script type="text/javascript">
    function readURL(input) {
    if (input.files && input.files[0]) {
        var reader = new FileReader();

        reader.onload = function (e) {
            $('#preview').attr('src', e.target.result);
        }

        reader.readAsDataURL(input.files[0]);
    }
    }

    $("#dp").change(function(){
        readURL(this);
    });
    </script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" ></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" ></script>
<%- include('partials/bottom_spacing.ejs') %>
</body>
</html>