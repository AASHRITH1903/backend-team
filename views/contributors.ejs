  background-position: center;
  margin-right: 1rem;
  box-shadow: 0 0 1rem 0 rgba(0, 0, 0, 0.2), 0 1rem 1rem -0.5rem rgba(0, 0, 0, 0.3);
}
.list .item .name {
  -webkit-box-flex: 2;
          flex-grow: 2;
  flex-basis: 10rem;
  font-size: 1.1rem;
  font-weight: bold;
}
.list .item > *{
    flex-shrink: 0;
}
.list .item .score {
  margin-right: 1.5rem;
  opacity: 0.5;
  white-space: nowrap;
  padding-left:10px;
}
.list .item .score:after {
  margin-right: 1rem;
  content: 'commits';
  opacity: 0.5;
}
.list .item:hover {
  -webkit-transform: scale(1.05);
          transform: scale(1.05);
}
.list .item:hover .pos {
  opacity: 0.8;
}

</style>
