<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Clubs</title>
    <style>
        h5{
            display: inline;
        }
        #club_head{
            display: inline;
            color: blue;
            padding-left: 50px;
        }
    </style>
    <%-include('partials/dependencies.ejs')%>    
</head>
<body>    
  <%-include('partials/alert_system.ejs')%>
    <%- include('partials/navbar_admin') %>
    <% if (clubs && clubs.length) { %>
    <h3 style="text-align: center; text-decoration: underline; padding-top: 30px;">List of Clubs</h3>
    <a class="btn btn-warning" href="/club/create" style="margin-left: 20px;" role="button">Add Club</a>
    <div class="container" style="padding-top:30px;">
        <div class="row row-cols-1 row-cols-md-4">
            <% clubs.forEach((club) => { %>
            <div class="col mb-4">
              <div class="card h-100">
                <img src="/images/<%=club.logo_url%>" class="card-img-top" alt="club_logo">
                <div class="card-body">
                  <h5 class="card-title"><%= club.name %></h5>
                  <p class="card-text"><a href="/club/reset/<%=club._id%>">reset</a> | <a href="/club/details/<%=club._id%>">details</a></p>
                </div>
              </div>
            </div>
            <% }) %>
        </div>

    </div>
    <% }else{ %>
        <div class="container">
            <h1 class="display-5">No clubs created yet</h1>
            <a class="btn btn-warning" href="/club/create" style="margin-left: 20px;" role="button">Add Club</a>
            <br>  
        </div>
    <% }%>

<%- include('partials/bottom_spacing.ejs') %>
</body>
</html>