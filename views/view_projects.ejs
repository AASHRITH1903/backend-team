<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Projects</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" >
</head>
<body>    
    <h2 style="display:none;" id="alerts"><%=alerts %></h2>
    <% if(alerts.length!=0){ %>
        <script type="text/javascript">
        document.addEventListener("DOMContentLoaded", function(event) { 
            var x = $("#alerts").html(); 
                alert(x);
        });
        </script>
    <% } %>
    <%- include('partials/navbar_admin') %>
    <div class="container">
    <% if (projects && projects.length) { %>
    <h2 style="color: blue; text-decoration: underline; text-align: center;"> List of All Projects </h2>
    <!-- Template for each project-->
    <div class="card-group" style="align-content: center;">
        <% projects.forEach((project) => { %>
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title"><%= project.title %></h5>
                    <h6 class="card-subtitle mb-2 text-muted"><%= project.branch %></h6>
                    <p class="card-text">
                        <%= project.team_members %>
                    </p>
                    <p>
                    <a href="#" class="btn btn-primary btn-sm">edit</a>  |  <a href="#" class="btn btn-primary btn-sm">details</a>
                    </p>
                </div>
            </div>
        <% }) %>
    </div>
    <% }else{ %>
        <div class="container">
            <h1 class="display-5">No projects created yet</h1>
        </div>
    <% }%>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha256-4+XzXVhsDmqanXGHaHvgh1gMQKX40OUvDEBTu8JcmNs="  crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" ></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" ></script>
<%- include('partials/bottom_spacing.ejs') %>
</body>
</html>