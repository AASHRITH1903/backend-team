    function createListItem(e, filet) {
            $("#snapholder").append(
                "<span class=\"pip\">" +
                "<img class=\"imageThumb\" src=\"" + e.target.result + "\" title=\"" + filet.name + "\"/>" +
                "<br/><span class=\"remove\">Remove </span>" +
                "</span>"
                );
            $(".remove").off("click");
            $(".remove").click(function(event){event.preventDefault();
                let title=($(this).parent(".pip").children("img")[0]);
                title=(title.getAttribute("title"));
                $(this).parent(".pip").remove();
                const dt = new DataTransfer()
                let files=$("#snapshot_url").prop('files');
                for (let file of files){
                    if (file.name !== title) 
                    dt.items.add(file)
                    document.getElementById("snapshot_url").files=dt.files;
                }
            });
        }
        $(document).ready(function() {
        $("#snapshot_url").on("change", function(e) {
        $(".pip").remove();
        // $('#ignore').val("");
        var files = e.target.files,
            filesLength = files.length;
        for (var i = 0; i < filesLength; i++) {
            var f = files[i]
            var fileReader = new FileReader();
            let id=i;
            fileReader.onloadend=(function(file){
                return function(evt){
                    createListItem(evt, file)
                }
            })(f);
            fileReader.readAsDataURL(f);  
        }
        });
         });
    </script>
